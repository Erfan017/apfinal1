<Window x:Class="abcd.customermenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abcd"
        mc:Ignorable="d"
        Background="Black"
        ResizeMode="NoResize"
        Title="customermenu" Height="200" Width="200">
    <Border BorderBrush="Yellow" BorderThickness="10" >
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Name="welcomebox" FontSize="20" Foreground="Cyan"/>
            <Button Foreground="Black" Background="Yellow" Content="Edit personal info"  FontSize="15" Height="25" Width="130" Margin="0,10,0,0" Click="Button_Click" />
                
            <Button Foreground="Black" Background="Yellow" Content="order food"  FontSize="15" Height="25" Width="130" Margin="0,30,0,0" Click="Button_Click_1" />
            </StackPanel>
    </Border>
</Window>
