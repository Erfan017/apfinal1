<Window x:Class="abcd.MainWindow"
        Background="Black"
        ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abcd"
        mc:Ignorable="d"
        Title="Restaurant" Height="450" Width="800">

    <Border BorderBrush="Yellow" BorderThickness="10" >
        <StackPanel>
            <Button Name="userbot" Content="customer"   HorizontalAlignment="Center"   Width="150" Height="100" Margin="100,90,100,0" Background="Yellow" Foreground="Black" BorderBrush="Red" BorderThickness="3.5" FontSize="31" MouseLeave="userbot_MouseLeave"  MouseEnter="userbot_MouseEnter" Click="userbot_Click"/>
            <Button Name="adminbot" Content="admin" HorizontalAlignment="Center" Width="150" Height="100" Margin="100,20,100,90"  Background="Yellow" Foreground="Black" BorderBrush="Red" BorderThickness="3.5" FontSize="31" MouseEnter="adminbot_MouseEnter"  MouseLeave="adminbot_MouseLeave"  Click="adminbot_Click"/>
        </StackPanel>
    </Border>
</Window>
